{
  "name": "vite-react-ts-tailwind-template",
  "description": "Boilerplate to quick-start development in TypeScript and TailwindCSS for React applications.",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "test": "vitest --run --reporter verbose",
    "test-filter": "vitest --reporter verbose --testNamePattern",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "prettier-format": "prettier --config .prettierrc --write src/**/*.ts src/**/*.tsx spec/**/*.ts",
    "prettier-watch": "onchange src/**/*.ts src/**/*.tsx spec/**/*.ts -- prettier --write {{changed}}",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.16",
    "@mui/material": "^5.14.16",
    "@mui/styled-engine-sc": "^6.0.0-alpha.4",
    "@table-library/react-table-library": "^4.1.7",
    "@tanstack/react-query": "^5.8.1",
    "@tanstack/react-query-devtools": "^5.8.4",
    "axios": "^1.6.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "formik": "^2.4.5",
    "react": "^18.2.0",
    "react-auth-kit": "^2.12.7",
    "react-dom": "^18.2.0",
    "react-lazy-load-image-component": "^1.6.0",
    "react-number-format": "^5.3.1",
    "react-router-dom": "^6.18.0",
    "react-spinners": "^0.14.1",
    "react-toastify": "^9.1.3",
    "styled-components": "^6.1.0",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.6.0",
    "@types/material-ui": "^0.21.16",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-lazy-load-image-component": "^1.6.3",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-c8": "^0.33.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "tailwindcss": "^3.2.6",
    "typescript": "^4.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.3"
  }
}
